{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block stylesheets %}
    {{ parent() }}

<style>
    .row {
        margin:0;
    }
    .container-fluid {
        padding: 0;
    }
    .main_bg img {
        width:100%;
        height: 671px;
        position: relative;
    }
    .slogan{
        color:#fff;
        position:absolute;
        margin:auto;
        top:200px;
        width:100%;
        text-align: center;
    }
    .slogan p:first-child {
         font-size:72px;
         font-weight: 600;
    }
    .slogan .annotate {
        font-size: 30px;
        font-weight: 400;
        margin-top: 40px;
    }
    .icon_wrapper {
        background-color: #fff;
        border-radius: 100px;
        width: 50px;
        height: 50px;
        margin: auto;
        position: relative;
        top: 100px;
    }
    .icon_wrapper i {
        font-size: 40px;
        color: #002176;
        position: relative;
        top: 8px;
        left: 2px;
        cursor: pointer;
    }
    .service_img {
        height:121px;
        overflow: hidden;
    }
    .service_img:hover img {
        position: relative;
        bottom:121px;
    }
    #products_section {
        background-color: #E5E5E5;
    }
    #products_section .product_blocks {
        text-align: center;
        padding:20px 0;
    }
    label {
        font-weight: 400;
        font-size: 12px;
        padding: 0 15px;
        text-align: center;
    }
    .product_category {
        text-transform: uppercase;
        margin: 15px 0 10px 0;
        display: block;
        font-size: 16px;
        font-weight: 600;
    }
    .product_info h3{
        font-size:30px;
    }
    .glyphicon-info-sign {
        color:#002176;
    }
    .product_info {
        background-color: #fff;
        font-size: 18px;
        font-weight: 400;
        padding: 0 40px;
        min-height:410px;
    }
    .read_more {
        padding-left:5px;
        color: #002176;
    }
    #arrow_target_about {
        top: 0px;
    }
    input, textarea {
        border: 3px solid #bfccd8;
        width: 100%;
        padding: 10px;
    }
    textarea {
        height:100px;
        resize:none;
    }
    .form_line{
        margin-bottom:10px;
    }
    .submit_button, .form_header {
        padding-right:0;
        position: relative;
        display: block;
    }
    .submit_button input {
        background-color: #000;
        color:#fff;
        text-transform: uppercase;
        font-size:20px;
        font-weight:600;
        margin:auto;
        width:30%;
        display: block;
        -webkit-transition: all 0.5s;
        -moz-transition: all 0.5s;
        -ms-transition: all 0.5s;
        -o-transition: all 0.5s;
        transition: all 0.5s;
        border: 3px solid #000;
    }
    .submit_button:hover input {
        background-color: #fff;
        color:#000;
        border: 3px solid #000;
    }
    #contact_section {
        position: relative;
    }
    #contact_section .test{
        background-color: #6c6159;
    }
    #contact_section img {
        width:100%;
        background: #fff;
        position: absolute;
        top: 0;
        z-index: -1;
    }
    .overflow_contact {
        background-color: #fff;
        z-index: 2;
        height: 774px;
        opacity: 0.3;
    }
    .outside_form {
        margin: auto;
        position: absolute;
        top:20%;
        left: 25%;
        padding: 20px 20px 20px 5px;
        background-color: #F3F3F4;
        opacity: 0.85;
    }
    .form_header_content{
        text-transform: uppercase;
        background-color: #000000;
        color: #fff;
        margin-bottom:20px;
        padding: 10px;
        text-align: center;
        font-size:20px;
        font-weight:600;
    }
    .form_line label {
        font-size:20px;
        font-weight:600;
    }
    .partner_section {
        background-color:#f9f9f9;
        padding:20px;
        text-align: center;
    }
    .partner_logo img {
        width:200px !important;
    }
    .partner_logo .partner-main {
        width:120px !important;
    }
    .partner_logo .partner-union {
        width: 220px !important;
        position: relative;
        top: 10px;
    }
    .product_info p {
        color: #222222;
        font-family: 'Open Sans', sans-serif;
        font-size: 18px;
        line-height: 200%;
    }
    .product_info h3 {
        font-size: 36px;
        color: #002d56;
        font-weight: normal;
        font-family: 'Open Sans', sans-serif;
    }

    /*start imported*/
    div#requisites {
        background-color:#424242;
        color:#FDFEFE;
        padding: 20px 20px 20px 20px;
        height:140px;
    }
    div#tracking {
        width:300px;
        text-align:left;
        float:left;
    }
    div#tracking span {
        font-weight:600;
        font-size:20px;
    }
    div#tracking p#trackingText {
        margin-top:6px;
        line-height: 16px;
        font-size:15px;
        font-family: 'Abel', sans-serif;
    }
    div#contactList ul li {
        display:inline;
        border-left: 1px solid #FDFEFE;
        padding-left: 3px;
        padding-right: 3px;
    }
    div#contactList ul li:first-child {
        border-left: none;
    }
    div#contactList ul a {
        text-decoration: none;
        color:#FFFFFF;
    }
    div#contactList ul a:hover {
        color:#c6c6c6
    }
    div#contactList {
        text-align:right;
        font-family: 'Abel', sans-serif;
        font-weight:500;
    }
    /*end imported*/

</style>

{% endblock %}

