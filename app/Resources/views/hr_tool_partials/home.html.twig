{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block stylesheets %}
    {{ parent() }}

<style>
    .main_bg img {
        width:100%;
        height: 671px;
        position: relative;
    }
    .slogan{
        color:#fff;
        position:absolute;
        margin:auto;
        top:200px;
        width:100%;
        text-align: center;
    }
    .slogan p:first-child {
         font-size:72px;
         font-weight: 600;
    }
    .slogan .annotate {
        font-size: 30px;
        font-weight: 400;
        margin-top: 40px;
    }
    .icon_wrapper {
        background-color: #fff;
        border-radius: 100px;
        width: 50px;
        height: 50px;
        margin: auto;
        position: relative;
        top: 100px;
    }
    .icon_wrapper i {
        font-size: 40px;
        color: #002176;
        position: relative;
        top: 8px;
        left: 2px;
        cursor: pointer;
    }
    .service_img {
        height:121px;
        overflow: hidden;
    }
    .service_img:hover img {
        position: relative;
        bottom:121px;
    }
    #products_section {
        background-color: #E5E5E5;
    }
    #products_section .product_blocks {
        text-align: center;
        padding:20px 0;
    }
    label {
        font-weight: 400;
        font-size: 12px;
        padding: 0 15px;
        text-align: center;
    }
    .product_category {
        text-transform: uppercase;
        margin: 15px 0 10px 0;
        display: block;
        font-size: 16px;
        font-weight: 600;
    }
    .product_info h3{
        font-size:30px;
    }
    .glyphicon-info-sign {
        color:#002176;
    }
    .product_info{
        background-color: #fff;
        font-size: 18px;
        font-weight: 400;
        padding: 0 40px;
        min-height:410px;
    }
    .read_more {
        padding-left:5px;
        color: #002176;
    }
    #arrow_target_about{
        top:50px;
    }
</style>

{% endblock %}

{% block body %}

   {#{{ dump() }}#}

    <div class="container-fluid">

            <section class="row main_bg">
                <figure>
                    <img src="../Resources/img/bg-img.jpg" alt="background">
                </figure>

                <div class="slogan">
                    <p>
                        The most qualified, timely and caring <br>
                        help that you could find
                    </p>
                    <p class="annotate">
