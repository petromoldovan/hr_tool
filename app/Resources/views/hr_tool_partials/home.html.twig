                    <div class="icon_wrapper" id="arrow_target_products">
                        <i class="glyphicon glyphicon-chevron-down"></i>
                    </div>
                </div>

            </section>

            <section class="row" id="products_section">

                {% for product in products %}

                    <div class="col-md-2 product_blocks">
                        <figure class="service_img">
                            <img src="{{ product.img }}" alt="{{ product.category }} image">
                        </figure>

                        <label>
                            <span class="product_category">{{ product.category }}</span>
                            <span>{{ product.description }}</span>
                        </label>
                    </div>

                {% endfor %}


                <div class="col-md-12 product_info">

