<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% include 'hr_tool_partials/partials/header.html.twig' %}

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script   src="https://code.jquery.com/jquery-2.2.2.min.js"   integrity="sha256-36cp2Co+/62rEAAYHLmRCPIych47CvdM+uTBJwSzWjI=" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

            <script type="application/javascript">

                //moving header
                $(window).on('scroll', function () {
                    var scrollTop = $(window).scrollTop();
                    if (scrollTop > 50) {
                        $('.header_parent img').stop().animate({height: "60px"},300);
                        $('.header_parent').stop().animate({height: "70px"},300);
                    }
                    else {
                        $('.header_parent img').stop().animate({height: "100px"},300);
                        $('.header_parent').stop().animate({height: "100px"},300);
                    }
                });
                $('#arrow_target_products').on('click',function(){
                    $("html, body").animate({
                        scrollTop: $('#products_section').offset().top
                    }, 2000);
                });
                $('#arrow_target_about').on('click',function(){
                    $("html, body").animate({
                        scrollTop: $('#contact_section').offset().top
                    }, 2000);
                })



            </script>

        {% endblock %}
    </body>
</html>
